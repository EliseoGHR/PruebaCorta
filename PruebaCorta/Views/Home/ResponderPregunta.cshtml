@model PruebaCorta.Models.Respuesta

@{
    ViewData["Title"] = "Responder la pregunta";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Responder Pregunta</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Respuesta</h4>
                    <hr />
                    <form asp-action="ResponderPregunta" method="post">
                        <input type="hidden" name="preguntaId" value="@ViewBag.PreguntaId" />
                        <div class="mb-3">
                            <textarea class="form-control" id="texto" name="texto" rows="3" required></textarea>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Enviar</button>

                            <a asp-action="Index" class="btn btn-secondary">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
